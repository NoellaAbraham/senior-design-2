<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Transparent background -->
    <solid android:color="@android:color/transparent"/>

    <!-- Rounded corners -->
    <corners android:radius="25dp"/>

    <!-- Black/Grey Outline -->
    <stroke
        android:width="2dp"
        android:color="#ffffff"/>


    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
