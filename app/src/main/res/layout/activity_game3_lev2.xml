<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAA4BD"
    tools:context=".Game3Lev2">

    <!-- Main Game Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_menu"
            android:contentDescription="Menu"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:fontFamily="@font/luckiestguy_regular"
            android:text="MEMORY MATCHING GAME"
            android:textColor="@color/purple"
            android:textSize="70sp"
            android:textAlignment="center"
            android:shadowColor="@color/pink"
            android:shadowDx="-20"
            android:shadowRadius="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- Time and Tries -->
        <TextView
            android:id="@+id/timeTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 00:00"
            android:textColor="#FFF"
            android:fontFamily="@font/luckiestguy_regular"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="200dp" />

        <TextView
            android:id="@+id/triesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of tries: 0"
            android:textColor="#FFF"
            android:fontFamily="@font/luckiestguy_regular"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeTaken"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="1038dp"
        android:layout_height="481dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        app:cardBackgroundColor="#e5e5e5"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/proceedButton"
                    android:layout_width="130dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="235dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="297dp"
                    android:backgroundTint="#DF7F99"
                    android:text="Proceed to Test"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/front_side1"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="129dp"
                    android:layout_marginTop="71dp"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/front_side" />

                <ImageButton
                    android:id="@+id/front_side2"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="71dp"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/front_side1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/front_side" />

                <ImageButton
                    android:id="@+id/front_side3"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="71dp"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/front_side2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/front_side" />

                <ImageButton
                    android:id="@+id/front_side4"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="71dp"
                    android:layout_marginEnd="144dp"
                    android:elevation="20dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/front_side" />

                <ImageButton
                    android:id="@+id/front_side5"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="129dp"
                    android:layout_marginBottom="71dp"
                    android:elevation="20dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/front_side" />

                <ImageButton
                    android:id="@+id/front_side6"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginBottom="71dp"
                    android:elevation="20dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/front_side5"
                    app:srcCompat="@drawable/front_side" />

                <ImageButton
                    android:id="@+id/front_side7"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginBottom="71dp"
                    android:elevation="20dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/front_side6"
                    app:srcCompat="@drawable/front_side" />

                <ImageButton
                    android:id="@+id/front_side8"
                    android:layout_width="145dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="144dp"
                    android:layout_marginBottom="68dp"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/front_side" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="124dp"
            android:layout_height="96dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="280dp"
            android:rotation="26"
            android:rotationY="180"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="149dp"
            android:layout_height="138dp"
            android:layout_marginStart="164dp"
            android:layout_marginBottom="40dp"
            android:rotation="17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="180dp"
                android:layout_height="185dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="42dp"
                android:rotation="-17"
                app:layout_constraintBottom_toTopOf="@+id/imageView26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.818"
                app:srcCompat="@drawable/star" />

            <ImageView
            android:id="@+id/imageView29"
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:rotation="43"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="117dp"
            android:layout_height="126dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView26"
            app:layout_constraintStart_toEndOf="@+id/imageView29"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="724dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView27"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="124dp"
            android:layout_height="83dp"
            android:layout_marginStart="212dp"
            android:layout_marginBottom="32dp"
            android:rotationY="189"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView26"
            app:srcCompat="@drawable/star" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Proper Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/rounded_corner_navigation_view"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>